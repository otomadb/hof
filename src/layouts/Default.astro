---
import "@fontsource/zen-antique-soft";
import "@fontsource-variable/jetbrains-mono";

interface Props {
  title?: string;
}

const { title } = Astro.props;

const siteTitle = Astro.props.title ? `${Astro.props.title} | HoF` : "HoF";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteTitle}</title>
  </head>
  <body class="bg-slate-50">
    <nav
      class="sticky top-0 left-0 bg-slate-900/75 z-infinity shadow-lg "
      style={{ backdropFilter: "blur(4px)" }}
    >
      <div class="container mx-auto px-12 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl text-white">éŸ³MAD HoF</a>
        <div>
          <a href="https://github.com/otomadb/hof" class="text-xl text-white">GitHub</a>
        </div>
      </div>
    </nav>
    <main class="container mx-auto px-12 py-8">
      <h1 class="text-4xl text-center text-slate-950 mb-8">{title}</h1>
      <slot />
    </main>
  </body>
</html>
